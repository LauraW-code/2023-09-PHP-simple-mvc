{% extends 'layout.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block content %} 

    <div>
        <h1 class="uk-heading-small uk-text-center h1-goddies"><span class="title-goddies">Connexion Ã  votre compte</span></h1>
    </div>

    <div>
        
        <form method="post" class="connexion-form">

        <img class="lw-connexion-img" src="/assets/images/PN_bain.png">

            <div class="connexion-label-input">
                
                <input type="text" name="username" class="connexion-champ uk-form-width-large" placeholder="nom d'utilisateur" required>
                {% if errors.username is defined %} 
                    <div class="uk-alert-danger" uk-alert>
                        <a href class="uk-alert-close" uk-close></a>
                        <p>{{ errors.username }}</p>
                    </div>
                {% endif %}
            </div>

            <div class="connexion-label-input">
                
                <input type="password" name="password" class="connexion-champ uk-form-width-large" autocomplete="current-password" placeholder="password" required>
                {% if errors.password is defined %}
                    <div class="uk-alert-danger" uk-alert>
                        <a href class="uk-alert-close" uk-close></a>
                        <p>{{ errors.password }}</p>
                    </div>
                {% endif %}
            </div>

            <div class="lw-button-div">
            <a><button type="submit" id="myConnexion">Connexion</button></a>
            </div>
        
        </form> 

    </div>

    
{% endblock %}